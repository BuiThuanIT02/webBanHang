                                        <i class="fa fa-phone" aria-hidden="true"></i>
                                    </div>
                                </div>
                                <div class="col-md-9">
                                    Tư vấn hỗ trợ <br>
                                    <strong class="text-danger">098754263</strong>

                                </div>
                            </div>
                        </div>




                        <!--Cột 2 trong cột 3-->
                        <div class="col">
                            <div class="row">
                                <div class="col-md-3 my-3">
                                    <div class="fs-3 text-danger border text-center" style="margin-top:-15px">
                                        @if (session != null)
                                        {
                                            <a href="/cap-nhat-thong-tin/@session.UserID">
                                                <i class="fa fa-user" aria-hidden="true"></i>
                                            </a>
                                        }
                                        else
                                        {
                                           
                                                <i class="fa fa-user" aria-hidden="true"></i>
                                          
                                        }
                                    </div>
                                </div>
                                @RenderPage("/Views/Shared/TopMenu.cshtml")
                            </div>

                        </div>





                    </div>
                </div>

                <!--Cot 4-->
                <div class="col-md-2 border">
                    <div class="row">

                        <div class="col me-2">
                            <a href="#" class="position-relative">
                                <span class="fs-3 text-dark">
                                    <i class="fa fa-heart" aria-hidden="true"></i>
                                </span>
                                <span class="position-absolute top-0  start-100 translate-middle badge rounded-pill bg-danger">
                                    0
                                    <span class="visually-hidden">unread messages</span>
                                    <!--..-hidden : ẩn nội dung trước mắt-->
                                </span>
                            </a>
                        </div>

