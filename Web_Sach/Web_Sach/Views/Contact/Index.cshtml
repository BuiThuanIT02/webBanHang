
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    #mapCanvas {
        width: 100%;
        height: 500px;
    }
</style>
@section jsFooter{


    <script src="https://maps.googleapis.com/maps/api/js"></script>



    <script>
        
    function initMap() {
        const uluru = { lat: 21.05706459628307, lng: 105.73464551442042   };
        const map = new google.maps.Map(document.getElementById('mapCanvas'), {
            zoom: 20,
    center: uluru,
    });
    const contentString ='@Html.Raw(Model.Content)';

    const infowindow = new google.maps.InfoWindow({
    content: contentString,
    ariaLabel: "Uluru",
    });
    const marker = new google.maps.Marker({
    position: uluru,
    map:map,
    title: "Địa chỉ",
    });
        marker.addListener("click", () => {
            infowindow.open({
                anchor: marker,
                map,
            });
        });
    }
     

        window.initMap = initMap();
      //  google.maps.event.addDomListener(window, 'load', initMap);

    </script>
    <script src="~/Scripts/Client/Controller/Contact.js"></script>

}
<div class="content mb-5">
    <div class="container">
        <div class="row">

            <div class="col-md-6">
                <h2>Thông tin liên hệ</h2>
                @Html.Raw(Model.Content)
                <form>
                    <div class="form-group mb-3">
                        <label>Họ tên</label>
                        <input type="text" id="txtName" class="form-control" required />


                    </div>
                    <div class="form-group mb-3">
                        <label>Số điện thoại</label>
                        <input type="tel" pattern="[0-9]{3} [0-9]{3} [0-9]{4}" placeholder="035 289 1444" id="txtMobile" class="form-control" required />

                    </div>

                    <div class="form-group mb-3">
                        <label>Địa chỉ</label>
                        <input type="text" id="txtAddress" class="form-control" required />

                    </div>

                    <div class="form-group mb-3">
                        <label>Email</label>
                        <input type="email" id="txtEmail" class="form-control" required />

                    </div>

                    <div class="form-group mb-3">
                        <label>Yêu cầu</label> <br />
                        <textarea class="form-control " style="resize:none" id="textContent" rows="9" required></textarea>

                    </div>

                    <button type="submit" id="btnSend" class="btn btn-danger">Gửi</button>
                </form>

            </div>

            <div class="col-md-6">
                <h2>Bản đồ</h2>

                <div class="map" id="mapCanvas"></div>
            </div>


        </div>
    </div>


</div>



